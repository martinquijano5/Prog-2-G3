<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title ">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i =0 ;i< 4; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="product/<%= arrayNovedades[i]%>">
						<figure class="product-box_image">
							<img src="images/products/<%= arrayNovedades[i] %>.jpeg" alt="<%= info.productos[arrayNovedades[i]].modelo %>">
						</figure>
						<article class="product-box_data">
							<h2> <%= info.productos[arrayNovedades[i]].modelo %> </h2>
							<p><%= `${info.productos[arrayMasComentados[i]].marca} - ${info.productos[arrayMasComentados[i]].anio} - ${info.productos[arrayMasComentados[i]].color} - ${info.productos[arrayMasComentados[i]].memoria}GB - ${info.productos[arrayMasComentados[i]].tamanio} pulgadas`  %></p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i =0 ;i< 4; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="product/<%= arrayMasComentados[i]%>">							
							<figure class="product-box_image">
								<img src="images/products/<%= arrayMasComentados[i] %>.jpeg" alt="<%= info.productos[arrayMasComentados[i]].modelo %>">
							</figure>
							<article class="product-box_data">
								<h2 class="un-celular"> <%= info.productos[arrayMasComentados[i]].modelo %> </h2>
								<p> <%= `${info.productos[arrayMasComentados[i]].marca} - ${info.productos[arrayMasComentados[i]].anio} - ${info.productos[arrayMasComentados[i]].color} - ${info.productos[arrayMasComentados[i]].memoria}GB - ${info.productos[arrayMasComentados[i]].tamanio} pulgadas` %></p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
			<% } %>

		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>
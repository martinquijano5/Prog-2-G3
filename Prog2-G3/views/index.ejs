<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<% if(locals.user){ %>
		<% console.log('el username es: ' + locals.user.username) %> 
        <%- include('./partials/headerLogueado', {info: locals.user}) %>
      <% } else {%>
        <%- include('./partials/header') %>
      <% }%>

	<!-- /Header -->
	
	<!-- Banner -->
	<img class="d-block w-100" id="banner" src="images/carousel/0.jpeg" alt="First slide">
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title ">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i =0 ;i< 4; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="product/<%= info[i].id%>">
						<figure class="product-box_image">
							<img src="images/products/<%= info[i].image %>" alt="<%= info.model %>">
						</figure>
						<article class="product-box_data">
							<h2> <%= info[i].model %> </h2>
							<p> <%= `${info[i].brand} - ${info[i].year} - ${info[i].color} - ${info[i].memory}GB - ${info[i].size} pulgadas`  %></p>
							<p>Comentarios: <%= info[i].comentarios.length %> </p>
							<div class="username-pfp">
								<img class="userpfp" src="<%= info[i].owner.image %> " alt="foto de perfil de <%= info[i].owner.username %>">
								<strong> <a href="/profile/<%= info[i].owner.id %>"> <%= info[i].owner.username %>  </a> </strong>
							</div>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mejor Rateados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i = 4;i< 8; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="product/<%= info[i].id%>">
							<figure class="product-box_image">
								<img src="images/products/<%= info[i].image %>" alt="<%= info.model %>">
							</figure>
							<article class="product-box_data">
								<h2> <%= info[i].model %> </h2>
								<p> <%= `${info[i].brand} - ${info[i].year} - ${info[i].color} - ${info[i].memory}GB - ${info[i].size} pulgadas`  %></p>
								<p>Comentarios: <%= info[i].comentarios.length %> </p>
								<div class="username-pfp">
									<img class="userpfp" src="<%= info[i].owner.image %> " alt="foto de perfil de <%= info[i].owner.username %>">
									<strong> <a href="/profile/<%= info[i].owner.id %>"> <%= info[i].owner.username %>  </a> </strong>
								</div>
							</article>
						</a>
					</section>
				</div>
				<% } %>
				
		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>
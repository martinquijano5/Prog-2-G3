<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
		<div class="carousel-indicators">
		  <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
		  <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
		  <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
		  <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
		  <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4" aria-label="Slide 5"></button>
		</div>
		<div class="carousel-inner" class="banner">
		  <div class="carousel-item active">
			<img src="../public/images/carousel/0.jpeg" class="d-block w-100" alt="iphone 13 pro verde">
		  </div>
		  <div class="carousel-item">
			<img src="../public/images/carousel/1.jpeg" class="d-block w-10y0" alt="samsung galaxy s22 ultra">
		  </div>
		  <div class="carousel-item">
			<img src="../public/images/carousel/2.jpeg" class="d-block w-100" alt="iphone se">
		  </div>
		  <div class="carousel-item">
			<img src="../public/images/carousel/3.jpeg" class="d-block w-100" alt="lg velvet">
		  </div>
		  <div class="carousel-item">
			<img src="../public/images/carousel/4.jpeg" class="d-block w-100" alt="iphone 13">
		  </div>
		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
		  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
		  <span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
		  <span class="carousel-control-next-icon" aria-hidden="true"></span>
		  <span class="visually-hidden">Next</span>
		</button>
	  </div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title ">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i =0 ;i< 4; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="product/<%= arrayNovedades[i]%>">
						<figure class="product-box_image">
							<img src="images/products/<%= arrayNovedades[i] %>.jpeg" alt="<%= info.productos[arrayNovedades[i]].modelo %>">
						</figure>
						<article class="product-box_data">
							<h2> <%= info.productos[arrayNovedades[i]].modelo %> </h2>
							<p><%= `${info.productos[arrayMasComentados[i]].marca} - ${info.productos[arrayMasComentados[i]].anio} - ${info.productos[arrayMasComentados[i]].color} - ${info.productos[arrayMasComentados[i]].memoria}GB - ${info.productos[arrayMasComentados[i]].tamanio} pulgadas`  %></p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i =0 ;i< 4; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="product/<%= arrayMasComentados[i]%>">							
							<figure class="product-box_image">
								<img src="images/products/<%= arrayMasComentados[i] %>.jpeg" alt="<%= info.productos[arrayMasComentados[i]].modelo %>">
							</figure>
							<article class="product-box_data">
								<h2 class="un-celular"> <%= info.productos[arrayMasComentados[i]].modelo %> </h2>
								<p> <%= `${info.productos[arrayMasComentados[i]].marca} - ${info.productos[arrayMasComentados[i]].anio} - ${info.productos[arrayMasComentados[i]].color} - ${info.productos[arrayMasComentados[i]].memoria}GB - ${info.productos[arrayMasComentados[i]].tamanio} pulgadas` %></p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
			<% } %>

		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>
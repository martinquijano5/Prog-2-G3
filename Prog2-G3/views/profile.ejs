<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<% if(locals.user){ %>
		<% console.log('cccc' + locals.user.username) %> 
        <%- include('./partials/headerLogueado', {info: locals.user}) %>
      <% } else {%>
        <%- include('./partials/header') %>
      <% }%>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src=" /images/users/<%= info.usuario.image %> %> " alt="foto de perfil de <% info.usuario.username %> " class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= info.usuario.username %> 
						<a href="/profile/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li> <%= info.usuario.email %> </li>
						<li> <%= info.productos.length %> productos</li>
						<li>200 seguidores</li>
						<li><%= info.comentarios.length %>  comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for(let i =0 ;i < info.productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= info.productos[i].id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= info.productos[i].image %>" alt="<%= info.productos[i].model %>">
							</figure>
							<article class="product-box_data">
								<h2> <%= info.productos[i].model %> </h2>
								<p><%= `Marca: ${info.productos[i].brand} - Año: ${info.productos[i].year} - Color: ${info.productos[i].color} - Memoria: ${info.productos[i].memory}GB - Tamaño: ${info.productos[i].size} pulgadas` %></p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>
<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<% if (info.length != 0) { %>
				<div class="col-12">
					<h2 class="products-title">Resultados de búsqueda para: "<i><%= query %></i>"</h2>
				</div>

				<% for(let i = 0; i < info.length; i++) { %> 
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/<%= info[i].id %>">
								<figure class="product-box_image">
									<img src="<%= info[i].image %>" alt="foto <%= info[i].model %>">
								</figure>
								<article class="product-box_data">
									<h2> <%= info[i].model %> </h2>
									<p>Descripción corta del producto Lorem ipsum dolor sit amet consectetur, adipisicing elit. Eaque delectus ex</p>
									<p>Comentarios: 12</p>
									<div class="username-pfp">
										<img class="userpfp" src="<%= usuarios[i].image %> " alt="foto de perfil de <%= usuarios[i].username %>">
										<strong> <a href="/profile/<%= usuarios[i].id %>"> <%= usuarios[i].username %>  </a> </strong>
									</div>
								</article>
							</a>
						</section>
					</div>
				<% } %> 
			<% } else { %> 
				<h2 class="products-title">No se encontraron resultados para: "<i><%= query %></i>"</h2>
			<% } %> 
		</div>
	</div>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>
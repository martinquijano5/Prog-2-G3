<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
    <!-- Header -->
    <%- include('./partials/header') %>
    <!-- /Header -->

    <!-- Novedades -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Registrate</h2>
            </div>
        </div>
    
        <form class="formulario" action="/profile/storeProfile" enctype="multipart/form-data" method="POST"> 
            <div class="label-input">
                <label for="email" class="form-label">Email</label>
                <input name="email"class = "border" type="email" placeholder=" example@email.com" class="email">
            </div>
            <div class="label-input">
                <label for="username" class="form-label">Usuario</label>
                <input name="username" class = "border" type="text" >
            </div>
            <div class="label-input">
                <label for="password" class="form-label">Contraseña</label>
                <input name="password" class = "border" type="password" placeholder=" mín. 8 caracteres" class="password">
            </div>
            <div class="label-input">
                <label for="form-date">Fecha de nacimiento</label>
                <input name="date" class = "border" type="date" class="form-date">
            </div>

            <div class="label-input">
                <label for="form-number">D.N.I.</label>
                <input name="dni" maxlength="9" class = "border" type="number" class="form-number" placeholder=" 23447800">
            </div>

            <div class="label-input">
                <label for="form-file">Foto de perfil</label>
                <input name="image" type="file" class="form-file">
            </div>

            <button type="submit" class="btn btn-primary">Registrarse</button>
        </form>
    </div>

    <!-- footer -->
    <%- include('./partials/footer') %>
    <!-- /footer -->
</body>

</html>

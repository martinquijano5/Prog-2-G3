<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
		</div>
	
		<form id="register" action="./profile" method="GET">
			<div class="label-input">
				<label for="exampleInputEmail1" class="form-label">Email</label>
				<input class = "border" type="email" class="form-control" id="exampleInputEmail1"
					aria-describedby="emailHelp">
			</div>
			<div class="label-input">
				<label for="formGroupExampleInput" class="form-label">Usuario</label>
				<input class = "border" type="text" class="form-control" id="formGroupExampleInput" placeholder="">
			</div>
			<div class="label-input">
				<label for="exampleInputPassword1" class="form-label">Contrase√±a</label>
				<input class = "border" type="password" class="form-control" id="exampleInputPassword1">
			</div>
			<div class="label-input">
				<label for="form-control" id="inputDob">Fecha de nacimiento</label>

				<input class = "border" type="date" class="form-date">
			</div>

			<div class="label-input">
				<label for="form-control" id="inputDni">D.N.I.</label>

				<input class = "border" type="number" class="form-number">
			</div>

			<div class="label-input">
				<label for="form-control" id="inputFoto">Foto de perfil</label>

				<input type="file" class="form-file">
			</div>

			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>